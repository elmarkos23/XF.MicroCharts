<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             x:Class="XF.MicroCharts.MainPage"
             Title="Charts Ventas">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="RadialGaugeChart"/>
                <forms:ChartView x:Name="Chart1" HeightRequest="200"/>
                <Label Text="LineChart"/>
                <forms:ChartView x:Name="Chart2" HeightRequest="200"/>
                <Label Text="DonutChart"/>
                <forms:ChartView x:Name="Chart3" HeightRequest="200"/>
                <Label Text="BarChart"/>
                <forms:ChartView x:Name="Chart4" HeightRequest="200"/>
                <Label Text="PointChart"/>
                <forms:ChartView x:Name="Chart5" HeightRequest="200"/>
                <Label Text="RadialChart"/>
                <forms:ChartView x:Name="Chart6" HeightRequest="200"/>
                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>